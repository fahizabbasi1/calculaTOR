   Task NO 7
#include <iostream>
using namespace std;
int main() {
    int numSubjects;
    
    // enter the total number of subjects
    cout << "Enter the total number of subjects: ";
    cin >> numSubjects;

    // each subject to enter marks
    for (int i = 1; i <= numSubjects; ++i) {
        int marks;
        
        cout << "Enter marks for subject " << i << " (out of 100): ";
        cin >> marks;

        // Classify the marks into grades
        char grade;
        if (marks >= 90) {
            grade = 'A';
        } else if (marks >= 75) {
            grade = 'B';
        } else if (marks >= 50) {
            grade = 'C';
        } else {
            grade = 'F';
        }

        // Display the grade
        std::cout << "Grade for subject " << i << ": " << grade << std::endl;
    }

    return 0;
}
